.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
/*scroll-view*/ 
.scrollview{
  position:absolute; 
  top:0; 
  left:0; 
  right:0; 
  bottom:0;
}
/*清除浮动*/
.clearfix:after{
  clear:both;
  content:'';
  display:block;
  visibility:hidden;
  width:0;
  height:0;
}
/*返回顶部*/
.top{
  display:none;
  position:fixed;
  bottom:200rpx;
  right:30rpx;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}
.top.active{
  display:block;
}
