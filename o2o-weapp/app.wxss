/**app.wxss**/
@import 'css/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
/*scroll-view*/ 
.scrollview{
  position:absolute; 
  top:0; 
  left:0; 
  right:0; 
  bottom:0;
}
/*清除浮动*/
.clearfix:after{
  clear:both;
  content:'';
  display:block;
  visibility:hidden;
  width:0;
  height:0;
}
/*返回顶部*/
.top{
  display:none;
  position:fixed;
  bottom:200rpx;
  right:30rpx;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}
.top.active{
  display:block;
}
/*padding*/
.padding-20{
  width:750rpx;
  height:20rpx;
  background:#fff;
  border-bottom:1rpx solid #e5e5e5;
}
.padding-86{
  width:750rpx;
  height:86rpx;
}
.padding-80{
  width:750rpx;
  height:80rpx;
}
.padding-100{
  float:left;
  width:750rpx;
  height:100rpx;
}
.padding-120{
  width:750rpx;
  height:120rpx; 
}
/*toast*/
.toast{
  display:none;
  position:fixed;
  left:50%;
  top:50%;
  width:340rpx;
  height:50rpx;
  transform:translate(-50%,-50%);
  line-height:50rpx;
  font-size:30rpx;
  text-align:center;
  background:rgba(0,0,0,.8);
  color:#fff;
  border-radius: 5rpx;
  transition:all .5s ease-in-out;
}
.toast.show{
  display:block;
}