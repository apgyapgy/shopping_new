/* pages/order/order.wxss */
.order-head{
  display:flex;
  width:750rpx;
  height:99rpx;
  border-bottom:1rpx solid #e5e5e5;
  background:#fff;
}
.order-head view{
  float:left;
  flex:1;
  height:99rpx;
  border-right:1rpx solid #ccc;
  background:#fff;
  text-align:center;
  font-size:30rpx;
  color:#333;
  line-height:99rpx;
}
.order-head view:last-child{
  border-right:0;
}
.order-head view.active{
  color:#24affd;
  background:#f2f2f2;
}
/*padding*/
.padding-20{
  width:750rpx;
  height:20rpx;
  background:#fff;
}

/*没有订单*/
.no-order text{
  display:block;
  margin-top:300rpx;
  height:100rpx;
  line-height:100rpx;
  font-size:24rpx;
  color:#666;
  text-align:center;
}

/*order body*/
.order-body{
  padding-bottom:40rpx;
  background: #f2f2f2;
}
.shop-order{
  background:#f2f2f2;
}
.shop-name{
  float:left;
  width:750rpx;
  height:88rpx;
  border-top:1rpx solid #e5e5e5;
  border-bottom:1rpx solid #e5e5e5;
}
.shop-name image{
  float:left;
  margin:25rpx 10rpx 0 30rpx;
  width:45rpx;
  height:45rpx;
}
.shop-name text{
  float:left;
  height:88rpx;
  font-size:30rpx;
  line-height:88rpx;
}
.shop-name text.s-name{
  color:#333;
}
.shop-name text.gt{
  margin-left:15rpx;
  color:#9f9f9f;
}
.shop-name text.order-success{
  margin-right:30rpx;
  float:right;
  color:#3fb8fc;
}

.shop-goods-list{
  float:left;
  background:#fff;
}
.shop-goods-list .shop-good{
  width:750rpx;
  height:196rpx;
  border-bottom:2rpx solid #e5e7e2;
}
.shop-goods-list .shop-good image{
  float:left;
  margin-top:22rpx;
  margin-left:28rpx;
  width:145rpx;
  height:145rpx;
  border-radius:10rpx;
  border:2rpx solid #e5e7e2;
}
.shop-goods-list .shop-good .shop-good-name{
  float:left;
  padding-left:20rpx;
  margin-top:22rpx;
  width:450rpx;
  height:174rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#000;
  font-weight:bold;
}
.shop-good-info{
  float:left;
  width:100rpx;
}
.shop-good-info .shop-good-price{
  display:block;
  margin-top:22rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:30rpx;
  font-weight:bold;
  color:#fa3e2d;
}
.shop-good-info .shop-good-num{
  margin-top:60rpx;
  display:block;
  width:100rpx;
  text-align:center;
  font-size:26rpx;
  color:#333;
}

.shop-order-info{
  float:left;
  width:750rpx;
  height:60rpx;
  background:#fff;
  border-bottom:2rpx solid #e5e5e5;
  font-size:24rpx;
  line-height:60rpx;
}
.shop-order-info .shop-order-coupon-used{
  margin-left:30rpx;
  float:left;
}
.shop-order-info .shop-order-price{
  float:right;
  margin-right:30rpx;
}
.shop-order-price text{
  font-size:30rpx;
}

.order-pay{
  float:left;
  width:750rpx;
  height:88rpx;
  border-bottom:2rpx solid #e5e5e5;
  background:#fff;
}
.pay,.open-box{
  float:right;
  margin-top:14rpx;
  margin-right:30rpx;
  width:198rpx;
  height:60rpx;
  line-height:60rpx;
  color:#fff;
  font-size:28rpx;
  background:#0fa8ff;
  border-radius:10rpx;
}

/*footer*/
@import '../footer/footer.wxss';

.clearfix:after{
  clear:both;
  content:'';
  display:block;
  visibility:hidden;
  width:0;
  height:0;
}