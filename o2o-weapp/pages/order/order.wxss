/* pages/order/order.wxss */
.order-head{
  display:flex;
  width:750rpx;
  height:99rpx;
  border-bottom:1rpx solid #e5e5e5;
  background:#fff;
}
.order-head view{
  float:left;
  flex:1;
  height:99rpx;
  border-right:1rpx solid #ccc;
  background:#fff;
  text-align:center;
  font-size:30rpx;
  color:#333;
  line-height:99rpx;
}
.order-head view:last-child{
  border-right:0;
}
.order-head view.active{
  color:#24affd;
  background:#f2f2f2;
}
/*没有订单*/
.no-order text{
  display:block;
  margin-top:300rpx;
  width:750rpx;
  height:50rpx;
  line-height:50rpx;
  font-size:40rpx;
  color:#ccc;
  text-align:center;
}

/*order body*/
.order-body{
  padding-bottom:40rpx;
  background: #f2f2f2;
}
.shop-order{
  background:#f2f2f2;
}
.shop-name{
  float:left;
  width:750rpx;
  height:88rpx;
  border-bottom:1rpx solid #e5e5e5;
}
.shop-order:first-of-type .shop-name{
  border-top:1rpx solid #e5e5e5;
}
.shop-name image{
  float:left;
  margin:25rpx 10rpx 0 30rpx;
  width:45rpx;
  height:45rpx;
}
.shop-name text{
  float:left;
  height:88rpx;
  font-size:30rpx;
  line-height:88rpx;
}
.shop-name text.s-name{
  color:#333;
}
.shop-name text.gt{
  margin-left:15rpx;
  color:#9f9f9f;
}
.shop-name text.order-success{
  margin-right:30rpx;
  float:right;
  color:#3fb8fc;
}

.shop-goods-list{
  float:left;
  background:#fff;
}
.shop-goods-list .shop-good{
  width:750rpx;
  height:196rpx;
  border-bottom:2rpx solid #e5e7e2;
}
.shop-goods-list .shop-good image{
  float:left;
  margin-top:22rpx;
  margin-left:28rpx;
  width:145rpx;
  height:145rpx;
  border-radius:10rpx;
  border:2rpx solid #e5e7e2;
}
.shop-goods-list .shop-good .shop-good-name{
  float:left;
  padding-left:20rpx;
  margin-top:22rpx;
  width:420rpx;
  height:174rpx;
  font-size:30rpx;
  line-height:40rpx;
  color:#000;
  font-weight:bold;
}
.shop-good-info{
  float:right;
  margin-right:10rpx;
  width:120rpx;
}
.shop-good-info .shop-good-price{
  display:block;
  margin-top:22rpx;
  width:120rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:30rpx;
  font-weight:bold;
  color:#fa3e2d;
  text-align:center;
}
.shop-good-info .shop-good-num{
  margin-top:60rpx;
  display:block;
  width:120rpx;
  text-align:center;
  font-size:26rpx;
  color:#333;
}

.shop-order-info{
  float:left;
  width:750rpx;
  height:60rpx;
  background:#fff;
  border-bottom:2rpx solid #e5e5e5;
  font-size:24rpx;
  line-height:60rpx;
}
.shop-order-info .shop-order-coupon-used{
  margin-left:30rpx;
  float:left;
}
.shop-order-info .shop-order-price{
  float:right;
  margin-right:30rpx;
}
.shop-order-price text{
  font-size:30rpx;
}

.order-pay{
  float:left;
  width:750rpx;
  height:88rpx;
  border-bottom:2rpx solid #e5e5e5;
  background:#fff;
}
.pay,.open-box{
  float:right;
  margin-top:14rpx;
  margin-right:30rpx;
  width:198rpx;
  height:60rpx;
  line-height:60rpx;
  color:#fff;
  font-size:28rpx;
  background:#0fa8ff;
  border-radius:10rpx;
}

/*footer*/
@import '../footer/footer.wxss';


/*点击去支付的弹窗*/
.pay-info-wrapper{
  position:fixed;
  left:0;
  top:0;
  bottom:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.1);
}
.pay-info-wrapper .pay-info{
  position:relative;
  margin:400rpx auto 0;
  width:500rpx;
  height:300rpx;
  background:#fff;
}
.pay-info-wrapper .pay-info .close{
  position:absolute;
  top:10rpx;
  left:20rpx;
  width:36rpx;
  height:36rpx;
  border-radius:50%;
  border:2rpx solid #676767;
  font-size:26rpx;
  text-align:center;
  line-height:36rpx;
  color:#676767;
}
.pay-info-title{
  width:100%;
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;
  color:#333;
  text-align:center;
  border-bottom:1rpx solid #bcbcbc;
}
.pay-info-body{
  width:100%;
  height:140rpx;
  border-bottom:1rpx solid #bcbcbc;
}
.pay-info-body .pay-info-company,
.pay-info-body .pay-info-money{
  width:100%;
  height:70rpx;
  line-height:70rpx;
  font-size:30rpx;
  text-align:center;
}
.pay-info-body .pay-info-money{
  line-height:60rpx;
}
.pay-info-pay{
  width:100%;
  height:100rpx;
}
.pay-info-pay .topay{
  display:block;
  margin:20rpx auto;
  width:180rpx;
  height:50rpx;
  background:#26b1fe;
  line-height:50rpx;
  font-size:30rpx;
  color:#fff;
  border-radius:5rpx;
  text-align:center;
}
.pay-info-pay .topay.disabled{
  background:rgba(38,177,254,.5);
}
