/* pages/login/login.wxss */
.container{
  margin: 0 20px;
  padding: 100rpx 0;
}
.logoInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo{
  width: 60px;
  height: 60px;
}
.logoYz{
  width: 100%;
  float: left;
  margin-top: 50px;
}
.inputView{
  width:100%;
   float:left;
   border:1px solid #ccc;
  height:40px;
  border-radius: 5px;
  margin-bottom:15px; 
  position: relative;
}
.sendYzm{
  position: absolute;
  right: 3px;
  top: 3px;
  float:left;
  width:200rpx;
  height: 34px;
  font-size:28rpx;
  line-height:34px;
  border-radius:10rpx;
  background:#1aad19;
  text-align:center;
  color:#fff;
  cursor:pointer;
  z-index:2;
}
.sendYzm.disabled{
  background:#9ed99d;
}
.mobile,.inputYzm{
  height:40px;
  line-height: 40px;
  padding-left:5px; 
}
.confirm{
  width: 100%;
  float: left;
}